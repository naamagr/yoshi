{
  "compilerOptions": {
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es5",
    "jsx": "react",
    "lib": ["dom", "es2016"],
    "resolveJsonModule": true
  },
  "include": [
    "./test/**/*.tsx",
    "./src/**/*.tsx",
    "./test/**/*.ts",
    "./src/**/*.ts"
  ],
  "files": [
    "./src/types/external-types.d.ts",
    "./src/types/stylable.d.ts"
  ]
}
